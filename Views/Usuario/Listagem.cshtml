@model List<Usuario>
@{
    ViewData["Title"] = "Listagem de Usu√°rios";
}

<div class="row">
    <div class="col-md-12">
        <table class="table table-striped"> 
            @if(Model.Count > 0)
            {
            <thead>
                <tr><th>Id</th>
                <th>Login</th>
                <th>Senha</th>
                <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach(Usuario u in Model)
                {
                <tr>
                    <td>@u.Id</td>
                    <td>@u.Login</td>
                    <td>@u.Senha</td>
                    <td><a href="/Usuario/Edicao/@u.Id">Editar</a></td>
                </tr>
                }
            </tbody>
            }else{
                <p>Nenhum registro encontado!</p>
            }
        </table>
    </div>
</div>